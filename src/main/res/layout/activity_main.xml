<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/enter_image"
        >


        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="150dp"
            android:padding="10dip"
            android:gravity="center|center_horizontal|center_vertical"
            >

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Name"/>

            <EditText android:id="@+id/txt_UserName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentStart="true"
                android:textColor="#ffffff"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="UID"

                android:layout_alignParentStart="true" />

            <EditText android:id="@+id/txt_UserPW"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_alignBottom="@+id/link_to_register"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp"
                android:textColor="#ffffff"/>

            <Button android:id="@+id/btn_Login"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:layout_marginTop="28dp"
                android:text="Start!"
                android:layout_below="@+id/txt_UserPW"
                android:layout_alignParentStart="true" />

            <TextView android:id="@+id/link_to_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Name:Liu Nan  UID:3035354541 "
            android:gravity="center"
            android:textSize="20dip"
            android:textColor="#ffffff"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/txt_UserName"
            android:layout_alignParentStart="true" />
        </LinearLayout>

        <!-- Login Form Ends -->

        <!-- Footer Start -->
        <!-- Footer Ends -->
    </RelativeLayout>